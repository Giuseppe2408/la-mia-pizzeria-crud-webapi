@{
    Layout = "_GuestLayout";
}



<div>
    <div class="col-12 mt-5">
        <form onsubmit="SendMessage(event)">
            <div class="mb-3">
                <label for="contact-email" class="form-label">Email</label>
                <input type="email" class="form-control" id="contact-email">
            </div>
            <div class="mb-3">
                <label for="contact-name" class="form-label">Nome</label>
                <input type="text" class="form-control" id="contact-name" >
            </div>
            <div class="mb-3">
                <label for="contact-title" class="form-label">Titolo</label>
                <input type="text" class="form-control" id="contact-title" >
            </div>
            <div class="mb-3">
                <label for="contact-text" class="form-label">Testo</label>
                <textarea class="form-control" id="contact-text" rows="10" ></textarea>
            </div>
            <input type="submit" class="btn btn-primary" value="Invia" />
        </form>
    </div>
</div>





@section Scripts {
    <script type="text/javascript">

        function SendMessage(e) 
        {
            e.preventDefault();
            const emailVal = document.getElementById('contact-email').value
            const nameVal = document.getElementById('contact-name').value
            const titleVal = document.getElementById('contact-title').value
            const textVal = document.getElementById('contact-text').value
            console.log(emailVal, nameVal,titleVal, textVal)

            axios.post('/api/message',{
                email: emailVal,
                name: nameVal,
                title: titleVal,
                text: textVal,
            }).then(res => {
                console.log(res)
                    //document.querySelector('#contact-email').value = '';
                    //document.querySelector('#contact-name').value = '';
                    document.querySelector('#contact-title').value = '';
                    document.querySelector('#contact-text').value = '';
            }).catch(error =>{
                
                console.log(error.response.data.errors);
            })
        }

    </script>
    


}