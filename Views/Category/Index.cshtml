@model List<Category>;


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Modifica</th>
      <th scope="col">Elimina</th>
    </tr>
  </thead>
  <tbody>
      @foreach (Category category in Model) 
      {
        <tr>
          @*<th scope="row">@category.Id</th>*@
          <td>@category.Id</td>
          <td>@category.Title</td>
          <td>
            <a
                asp-controller="Category"
                asp-action="Edit"
                asp-route-id="@category.Id"

                class="btn btn-warning">Modifica categoria
            </a>
            
          </td>
          <td>
            <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post">

                <button type="submit" class="btn btn-danger">Elimina categoria</button>

            </form>
          </td>
        </tr>
      }
  </tbody>
</table>


<div class="row">
    <div class="col-12">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><span>Aggiungi Categoria</span></a>
    </div>
</div>