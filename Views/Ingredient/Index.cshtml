@model List<Ingredient>;


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Modifica</th>
      <th scope="col">Elimina</th>
    </tr>
    </tr>
  </thead>
  <tbody>
        @foreach (Ingredient ingredient in Model)
        {
            <tr>
                @*<th scope="row">@category.Id</th>*@
              <td>@ingredient.Id</td>
              <td>@ingredient.Title</td>
              <td>
                <a
                asp-controller="Ingredient"
                asp-action="Edit"
                asp-route-id="@ingredient.Id"

                class="btn btn-warning">Modifica ingrediente
                </a>
                
              </td>
              <td>
                <form asp-controller="Ingredient" asp-action="Delete" asp-route-id="@ingredient.Id" method="post">

                    <button type="submit" class="btn btn-danger">Elimina ingrediente</button>

                </form>
              </td>
            </tr>
        }
  </tbody>
</table>


<div class="row">
    <div class="col-12">
        <a asp-controller="Ingredient" asp-action="Create" class="btn btn-primary"><span>Aggiungi Ingrediente</span></a>
    </div>
</div>
